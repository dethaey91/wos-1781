<body>
  <main class="app">
    <header>
      <h1>
        WoS Rally Sync Planner
        <span class="badge">SvS / Castle Battle</span>
      </h1>
      <p class="subtitle">
        Enter each whale's march time to the target and generate a perfectly synced rally call order
        (all rallies arriving at the same time).
      </p>
    </header>

    <section class="grid">
      <!-- INPUT SIDE -->
      <div class="card">
        <h2>
          1. March Times
          <span class="label-soft">Slowest march = first rally call</span>
        </h2>
        <p class="hint">
          Time formats: <strong>seconds</strong> (e.g. <code>45</code>) or <strong>MM:SS</strong> (e.g.
          <code>1:15</code>, <code>02:30</code>). Leave unused rows empty.
        </p>

        <div class="results-table-wrapper" style="max-height: 320px;">
          <table>
            <thead>
              <tr>
                <th>#</th>
                <th>Player / Whale</th>
                <th>March Time</th>
              </tr>
            </thead>
            <tbody id="playersBody">
              <!-- Rows will be injected by JS -->
            </tbody>
          </table>
        </div>

        <button id="generateBtn" class="btn" type="button">
          ⚔️ Generate Call Order
        </button>
        <button id="clearBtn" class="btn secondary" type="button">
          ✖ Clear Times
        </button>
        <div id="status" class="status"></div>
      </div>

      <!-- OUTPUT SIDE -->
      <div class="card">
        <h2>
          2. Rally Call Plan
          <span class="pill">All hits land together</span>
        </h2>
        <p class="hint">
          Offsets are relative to the <strong>first caller</strong> (the one with the slowest march time).
        </p>

        <div class="results-table-wrapper">
          <table>
            <thead>
              <tr>
                <th>Order</th>
                <th>Player</th>
                <th>March Time</th>
                <th>Offset vs First</th>
              </tr>
            </thead>
            <tbody id="resultsBody">
              <tr>
                <td colspan="4" style="text-align:center; padding: 0.9rem 0; color:#6b7280;">
                  No data yet. Enter march times and click "Generate Call Order".
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="textarea-wrapper">
          <label class="label-soft" for="shareText">Quick copy for alliance chat:</label>
          <textarea id="shareText" readonly>Order will appear here after you generate the plan.</textarea>
          <div class="copy-note">
            Tip: Use this as your "Rally order" macro in SvS — just paste directly into AC / state chat.
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    const NUM_ROWS = 10;

    function createRows() {
      const tbody = document.getElementById("playersBody");
      tbody.innerHTML = "";

      for (let i = 1; i <= NUM_ROWS; i++) {
        const tr = document.createElement("tr");
        tr.className = "player-row";
        tr.dataset.defaultName = "Whale " + i;

        const idxTd = document.createElement("td");
        idxTd.textContent = i;

        const nameTd = document.createElement("td");
        const nameInput = document.createElement("input");
        nameInput.type = "text";
        nameInput.className = "player-name";
        nameInput.placeholder = "Whale " + i;
        nameTd.appendChild(nameInput);

        const timeTd = document.createElement("td");
        const timeInput = document.createElement("input");
        timeInput.type = "text";
        timeInput.className = "march-time";
        timeInput.placeholder = "e.g. 45 or 1:15";
        timeTd.appendChild(timeInput);

        tr.appendChild(idxTd);
        tr.appendChild(nameTd);
        tr.appendChild(timeTd);
        tbody.appendChild(tr);
      }
    }

    function parseTimeToSeconds(str) {
      if (!str) return NaN;
      const s = String(str).trim();
      if (!s) return NaN;

      if (s.includes(":")) {
        const parts = s.split(":");
        if (parts.length !== 2) return NaN;
        const minutes = Number(parts[0]);
        const seconds = Number(parts[1]);
        if (Number.isNaN(minutes) || Number.isNaN(seconds) || seconds < 0 || seconds >= 60) return NaN;
        return minutes * 60 + seconds;
      } else {
        const secs = Number(s);
        if (Number.isNaN(secs) || secs <= 0) return NaN;
        return secs;
      }
    }

    function formatSeconds(sec) {
      if (!Number.isFinite(sec) || sec < 0) return "-";
      const total = Math.round(sec);
      const minutes = Math.floor(total / 60);
      const seconds = total % 60;
      if (minutes === 0) {
        return `${total}s`;
      }
      const mm = String(minutes);
      const ss = seconds.toString().padStart(2, "0");
      return `${mm}:${ss} (${total}s)`;
    }

    function formatOffset(offset) {
      const total = Math.round(offset);
      if (total === 0) return "0s (first caller)";
      return `${total}s after first`;
    }

    function generatePlan() {
      const statusEl = document.getElementById("status");
      statusEl.textContent = "";
      statusEl.classList.remove("error");

      const rows = document.querySelectorAll(".player-row");
      const players = [];

      rows.forEach((row, index) => {
        const nameInput = row.querySelector(".player-name");
        const timeInput = row.querySelector(".march-time");

        const rawName = nameInput.value.trim();
        const name = rawName || row.dataset.defaultName || `Player ${index + 1}`;

        const timeStr = timeInput.value.trim();
        if (!timeStr) return; // skip empty rows

        const seconds = parseTimeToSeconds(timeStr);
        if (!Number.isFinite(seconds) || seconds <= 0) {
          statusEl.textContent = `Row ${index + 1} has an invalid time. Use "seconds" (e.g. 45) or "MM:SS" (e.g. 1:15).`;
          statusEl.classList.add("error");
          return;
        }

        players.push({
          index: index + 1,
          name,
          seconds,
        });
      });

      if (statusEl.classList.contains("error")) {
        // invalid input already reported
        return;
      }

      if (players.length === 0) {
        statusEl.textContent = "Please enter at least one march time.";
        statusEl.classList.add("error");
        renderEmptyResults();
        return;
      }

      if (players.length === 1) {
        statusEl.textContent = "Only one march time entered. That player will be the only rally caller.";
      } else {
        statusEl.textContent = `Loaded ${players.length} march times. Slowest march will call first.`;
      }

      const maxTime = Math.max(...players.map((p) => p.seconds));
      players.forEach((p) => {
        p.offset = maxTime - p.seconds; // 0 for slowest march
      });

      players.sort((a, b) => {
        if (a.offset !== b.offset) return a.offset - b.offset;
        return a.seconds - b.seconds;
      });

      renderResults(players);
      generateShareText(players);
    }

    function renderEmptyResults() {
      const tbody = document.getElementById("resultsBody");
      tbody.innerHTML = "";
      const tr = document.createElement("tr");
      const td = document.createElement("td");
      td.colSpan = 4;
      td.style.textAlign = "center";
      td.style.padding = "0.9rem 0";
      td.style.color = "#6b7280";
      td.textContent = 'No data yet. Enter march times and click "Generate Call Order".';
      tr.appendChild(td);
      tbody.appendChild(tr);

      const shareText = document.getElementById("shareText");
      shareText.value = "Order will appear here after you generate the plan.";
    }

    function renderResults(players) {
      const tbody = document.getElementById("resultsBody");
      tbody.innerHTML = "";

      players.forEach((p, idx) => {
        const tr = document.createElement("tr");
        if (idx === 0) {
          tr.classList.add("highlight");
        }

        const orderTd = document.createElement("td");
        orderTd.textContent = idx + 1;

        const nameTd = document.createElement("td");
        nameTd.textContent = p.name;

        const timeTd = document.createElement("td");
        timeTd.textContent = formatSeconds(p.seconds);

        const offsetTd = document.createElement("td");
        offsetTd.textContent = formatOffset(p.offset);

        tr.appendChild(orderTd);
        tr.appendChild(nameTd);
        tr.appendChild(timeTd);
        tr.appendChild(offsetTd);

        tbody.appendChild(tr);
      });
    }

    function generateShareText(players) {
      const lines = [];
      lines.push("Rally sync plan (all rallies land together):");

      players.forEach((p, idx) => {
        const order = idx + 1;
        const base = `${order}) ${p.name}`;
        if (idx === 0) {
          lines.push(`${base} – CALL FIRST (slowest march, offset 0s)`);
        } else {
          const offsetSec = Math.round(p.offset);
          lines.push(`${base} – press ${offsetSec}s after first`);
        }
      });

      const shareText = document.getElementById("shareText");
      shareText.value = lines.join("\n");
    }

    function clearTimes() {
      const rows = document.querySelectorAll(".player-row");
      rows.forEach((row) => {
        const nameInput = row.querySelector(".player-name");
        const timeInput = row.querySelector(".march-time");
        timeInput.value = "";
        // keep names – often you’ll reuse your whales
      });
      renderEmptyResults();
      const statusEl = document.getElementById("status");
      statusEl.textContent = "March times cleared. You can enter new values.";
      statusEl.classList.remove("error");
    }

    document.addEventListener("DOMContentLoaded", () => {
      createRows();
      renderEmptyResults();

      document.getElementById("generateBtn").addEventListener("click", generatePlan);
      document.getElementById("clearBtn").addEventListener("click", clearTimes);
    });
  </script>
</body>
</html>
